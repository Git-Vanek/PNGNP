<?xml version="1.0" encoding="UTF-8"?>

<!-- Импорт необходимых классов из библиотеки JavaFX -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<!-- Основной контейнер VBox с применением стилей и контроллера -->
<VBox styleClass="vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example._pngnp.controllers.HelloController">

  <!-- Установка отступов для контейнера -->
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <!-- Элемент ImageView для отображения логотипа -->
  <ImageView styleClass="logo" fx:id="logoImageView" fitWidth="200" fitHeight="200" preserveRatio="true" />

  <!-- Элемент Label для отображения заголовка -->
  <Label styleClass="title" text="PNGNP" />

  <!-- Элемент Label для отображения описания -->
  <Label styleClass="description" text="Edit images with ease! Support for various formats, filters, and effects." />

  <!-- Кнопка для начала работы с приложением -->
  <Button styleClass="button" text="Start" onAction="#onStartButtonClick" prefWidth="250" prefHeight="30" />

  <!-- Кнопка для настройки приложения -->
  <Button styleClass="button" text="Settings" onAction="#onSettingsButtonClick" prefWidth="250" prefHeight="30" />

  <!-- Кнопка для отправления отзыва -->
  <Button styleClass="button" text="Feedback" onAction="#onFeedbackButtonClick" prefWidth="250" prefHeight="30" />

</VBox>