<?xml version="1.0" encoding="UTF-8"?>

<!-- Импорт необходимых классов из библиотеки JavaFX -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Основной контейнер VBox с применением стилей и контроллера -->
<VBox stylesheets="@../styles/main.css" styleClass="vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example._pngnp.controllers.SettingsController">

    <!-- Установка отступов для контейнера -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Элемент Label для отображения заголовка -->
    <Label styleClass="title" text="Settings" />

    <!-- Поле ввода для настройки 1 -->
    <Label styleClass="label_FFFFFF" text="Setting 1:" />
    <TextField fx:id="setting1Field" />

    <!-- Поле ввода для настройки 2 -->
    <Label styleClass="label_FFFFFF" text="Setting 2:" />
    <TextField fx:id="setting2Field" />

    <!-- Кнопки для сохранения и отмены -->
    <Button styleClass="button" text="Save" onAction="#onSaveButtonClick" />
    <Button styleClass="button" text="Cancel" onAction="#onCancelButtonClick" />

</VBox>