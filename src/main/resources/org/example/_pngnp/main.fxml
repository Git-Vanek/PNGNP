<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example._pngnp.MainController">
    <!-- Шапка -->
    <top>
        <HBox styleClass="top-vbox">
            <Label styleClass="title" text="PNGNP" />
            <HBox styleClass="hbox" HBox.hgrow="ALWAYS">
                <Button onAction="#loadImage" styleClass="button" text="Load Image" />
                <Button onAction="#saveImage" styleClass="button" text="Save Image" />
            </HBox>
            <Button styleClass="button" text="Information" />
        </HBox>
    </top>
    <!-- Основная панель с изображением и canvas для рисования -->
    <center>
        <ScrollPane fx:id="scrollPane" styleClass="scroll-pane" fitToWidth="true" fitToHeight="true">
            <StackPane styleClass="stack-pane">
                <ImageView fx:id="imageView" preserveRatio="true" />
                <Canvas fx:id="canvas" />
            </StackPane>
        </ScrollPane>
    </center>
    <!-- Выдвижная панель слева с инструментами -->
    <left>
        <VBox styleClass="left-vbox">
            <VBox styleClass="vbox">
                <Button styleClass="button" onAction="#applyGrayscaleFilter" text="Grayscale Filter" />
                <Button styleClass="button" onAction="#applyMedianFilter" text="Median Filter" />
                <Button styleClass="button" onAction="#applyThresholdFilter" text="Threshold Filter" />
                <Button styleClass="button" onAction="#applySobelFilter" text="Sobel Filter" />
            </VBox>
            <HBox styleClass="hbox">
                <Label styleClass="label_FFFFFF" text="Brush Size:" />
                <Slider fx:id="brushSizeSlider" blockIncrement="1.0" majorTickUnit="10.0" max="50.0" min="1.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="10.0" />
            </HBox>
            <HBox styleClass="hbox">
                <Label styleClass="label_FFFFFF" text="Brush Color:" />
                <ColorPicker fx:id="brushColorPicker" />
            </HBox>
        </VBox>
    </left>
    <!-- Нижняя панель с кнопками -->
    <bottom>
        <HBox styleClass="footer">
            <HBox styleClass="hbox" HBox.hgrow="ALWAYS">
                <Button styleClass="button" text="Undo" />
                <Button styleClass="button" text="Redo" />
            </HBox>
            <HBox styleClass="hbox" HBox.hgrow="ALWAYS">
                <Label styleClass="label_FFFFFF" text="Zoom:"/>
                <TextField fx:id="zoomTextField" prefWidth="50" alignment="CENTER_RIGHT" text="100%"/>
                <Button styleClass="button" text="+" onAction="#increaseZoom"/>
                <Button styleClass="button" text="-" onAction="#decreaseZoom"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
