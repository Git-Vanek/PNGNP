<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example._pngnp.MainController" alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <ImageView fx:id="imageView" fitWidth="400.0" fitHeight="400.0" preserveRatio="true"/>

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Load Image" onAction="#loadImage" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        <Button text="Grayscale Filter" onAction="#applyGrayscaleFilter" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        <Button text="Median Filter" onAction="#applyMedianFilter" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        <Button text="Threshold Filter" onAction="#applyThresholdFilter" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        <Button text="Sobel Filter" onAction="#applySobelFilter" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
    </HBox>
</VBox>